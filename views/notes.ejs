<%- include('partials/header'); -%>
<body>
<div class="app">
    <div class="app-sidebar" id="sidebar">
        <div class="app-sidebar-header">
            <h1>Entries</h1>
            <button id="add-note-btn">Add</button>
        </div>
        <div class="app-sidebar-notes" id="sidebarNotes"></div>
    </div>
    <div class="app-main" id="main">
        <div class="app-main-note-edit">
            <input type="text" id="title" placeholder="Note Title" />
            <textarea id="body" placeholder="Write your note here..."></textarea>
        </div>
        <!-- <div class="app-main-note-preview">
            <h1 class="preview-title"></h1>
